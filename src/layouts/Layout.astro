---
import SEOTags from "@/components/seo/SEOTags.astro";
import type { HeadTags } from "@/components/seo/HeadTags";
import { getLangFromUrl } from "@/i18n/utils";

import "@fontsource-variable/space-grotesk";
import "@/styles/global.css";

export type Props = HeadTags;

const headTags = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!DOCTYPE html>
<html lang={`${lang === "en" ? "en" : "pt-BR"}`}>
  <SEOTags {...headTags} />
  <body
    class="w-full min-h-screen bg-gradient-to-t bg-neutral-950 to-neutral-800 text-sm text-neutral-400 transition-all ease-in-out"
  >
    <slot />
    <style is:global>
      body {
        font-family: "Space Grotesk Variable", sans-serif;
      }
    </style>
  </body>
</html>
