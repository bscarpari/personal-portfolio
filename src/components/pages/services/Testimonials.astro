---
import Spacing from "@/layouts/Spacing.astro";
import Header from "@/components/ui/header.astro";
import Testimonial from "@/components/ui/testimonial.astro";

const testimonials = [ 
  {
    image: "/clients/maria.webp",
    fullname: "Maria Eduarda Bastos",
    description:
      "Eu estou muito feliz com o resultado do meu novo web design. Foi um processo desafiador, mas valeu a pena. O design ficou moderno e funcional, e a navegação do site agora é muito mais intuitiva. Recomendo fortemente!!",
    siteUrl: "https://mepb.myportfolio.com",
  },
  {
    image: "/clients/valdir.webp",
    fullname: "Valdir Rospirski",
    description:
      "Estava procurando por alguém que pudesse me ajudar a transformar meu site pessoal em algo mais profissional e atraente, e você fez isso com maestria. A atenção aos detalhes foram excepcionais.",
    siteUrl: "https://rospirski.com",
  },
  {
    image: "/clients/ayos.webp",
    fullname: "Ayos Software",
    description:
      "O novo design do nosso site ficou incrível. A navegação ficou muito mais intuitiva e o design ficou muito mais moderno. Obrigado por toda a ajuda e atenção aos detalhes.",
    siteUrl: "https://ayos.dev",
  },
];
---

<div id="testimonials">
  <Spacing>
    <Header
      title="Experiência de alguns dos meus clientes"
      subtitle="Depoimentos"
    />
    <div
      class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2 sm:gap-x-6 lg:grid-cols-3 xl:gap-x-8 mt-16 px-6 sm:px-8"
    >
      {
        testimonials.map((testimonial) => (
          <Testimonial
            image={testimonial.image}
            fullname={testimonial.fullname}
            description={testimonial.description}
            siteUrl={testimonial.siteUrl}
          />
        ))
      }
    </div>
  </Spacing>
</div>
