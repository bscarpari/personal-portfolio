---
import Header from "@/components/ui/header.astro";
import Card from "@/components/ui/card.astro";

import { Button } from "@/components/ui/button";
import { Figma } from "lucide-react";
---

<div class="mx-auto max-w-7xl px-6 text-center lg:px-8 my-48" id="services">
  <Header
    subtitle="Serviços"
    title="Desenvolvimento web & design é minha especialidade"
  />
  <ul
    role="list"
    class="mx-auto my-16 grid max-w-2xl grid-cols-1 gap-6 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-8"
  >
    <Card
      title="Web Design"
      description="Websites e landing page para qualquer nicho, com ênfase em conversão e apreço visual."
    />
    <Card
      title="Design Gráfico"
      description="Produzo desde identidades visuais a  artes para redes sociais, tornando sua presença digital consistente."
    />
    <Card
      title="Desenvolvimento web"
      description="Todos os projetos são desenvolvidos do zero com tecnologias atualizadas e de alta performance."
    />
  </ul>
  <a
    href="#pricing-plans"
    class="w-full sm:w-auto"
  >
    <Button variant={"gradient"} size={"lg"} className="w-full sm:w-auto">
      <Figma className="w-6 h-6 mr-2" />
      Quero um website
    </Button>
  </a>
</div>
