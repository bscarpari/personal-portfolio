---
import { Button } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <main class="grid h-screen place-items-center px-6 py-24 sm:py-32 lg:px-8">
    <div class="text-center">
      <p
        class="text-base font-semibold bg-gradient text-transparent bg-clip-text opacity-90"
      >
        404
      </p>
      <h1
        class="mt-4 text-3xl font-bold tracking-tight text-primary-foreground sm:text-5xl"
      >
        Página não encontrada
      </h1>
      <p class="mt-6 text-base leading-7">
        Desculpe, mas não conseguimos encontrar a página que você está
        procurando.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a href="/">
          <Button
            variant={"gradient"}
            size={"lg"}
            className="text-primary-foreground"
          >
            Voltar
          </Button>
        </a>
      </div>
    </div>
  </main>
</Layout>
